<div class='center'>
  <button class='btn btn-primary col-12 col-md-4 center font-weight-bold text-light mt-3'>
    <p class ="mt-3"><h3>External Transactions </h3><p>
  </button>
  <div class="d-flex justify-content-between rounded col-12 col-md-5 center mb-5 shadow-sm bg-white pt-2 mt-3">
    <p class ="mt-3"><h4>Total Hours:</small></h4> <h3><strong>Hours <%= @tranb.sum(:amount) %></strong></h3></p>
  </div>
</div>

  <% @tranb.each do |t| %>
    <%= link_to transaction_path(t.id) do %>
      <div class=' d-flex flex-column col-12 col-md-5 rounded center mb-3 shadow-sm bg-white text-dark'>
        <div class = "d-flex justify-content-between mt-3">
          <p class ="mt-3 text-dark"><h5><%= t.name %></h5><p>
          <p class ="mt-3 text-dark"><h6>Hrs <%= t.amount %></h6></p>
        </div>    
        <div class = "d-flex justify-content-end">
          <p><small class="text-dark"><%=t.created_at.strftime("%b %d, %Y")%></small></p>
        </div>
      </div>
    <%end%>  
  <%end%>

<div class='action d-flex mb-3'>
  <%= link_to 'Add new transaction', new_transaction_path, :class => 'center btn btn-success custom-bg2 btn-lg col-12 col-md-5 font-weight-bold text-white' %>
</div>

  <%= link_to "Back", root_path, :class => 'btn btn-primary  col-12 col-md-4 center font-weight-bold text-white' %>
