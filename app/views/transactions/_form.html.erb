
<div class='container rounded text-light font-weight-bold ol-12 col-md-5 center mb-5 shadow-sm custom-bg'>
  <div class="form-group">

      <%= form_with(model: transaction) do |form| %>
    <% if transaction.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(transaction.errors.count, "error") %> prohibited this transaction from being saved:</h2>

        <ul>
          <% transaction.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>


    <div class="field">
      <%=form.label :select_group %>
      <%=select("transaction", "group_id", Group.all.collect {|g|[g.name, g.id] }, { include_blank: true })%>
    </div>

    <div class="field">
      <%= form.label :name  %>
      <%= form.text_field :name,  :class => 'bg-white text-dark font-weight-bold' %>
    </div>

    <div class="field">
      <%= form.label :amount%>
      <%= form.number_field :amount, :class => 'bg-white text-dark font-weight-bold'%>
    </div>

    <div class="actions">
      <%= form.submit "Create", :class => 'btn btn-success btn-lg mt-2 text-white' %>
    </div>
  <% end %>
 </div>
</div>
