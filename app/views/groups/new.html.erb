<div class='custom-bg2 text-light d-flex justify-content-between rounded col-12 col-md-6 center mb-5 mt-3 shadow-sm bg-white'>
  <h1 class="center mt-3 my-3">New group</h1>
</div>

 <div class="bg-danger text-light mt-1 center rounded ">
        <% if @group.errors.any? %>
          <% @group.errors.full_messages.each do |error| %>
            <%= error %>
          <% end %>
        <% end %>
     </div>

<div class='container rounded text-light font-weight-bold ol-12 col-md-5 center mb-5 shadow-sm custom-bg'>
  <div class="pb-4">
    <%=form_for @group do |f|%>

      <div class="field ">
        <%=f.label :name %>
        <%=f.text_field :name,:class => 'bg-white text-dark font-weight-bold'%>
      </div>

      <div class="field ">
        <fieldset>
          <%= f.label :icon, 'icon' %>
          <%= f.hidden_field :icon_cache%>
          <%= f.file_field :icon,:class => 'bg-white text-dark font-weight-bold'%>
        </fieldset>
      </div>

      <div class="actions">
        <%=f.submit "Create", :class => 'btn btn-success btn-lg mt-2 text-white'%>
      </div>
    <%end%>
  </div>
</div>

<%= link_to "Back", root_path, :class => 'btn btn-primary btn-lg mt-2 col-12 col-md-4 center font-weight-bold text-white' %>
