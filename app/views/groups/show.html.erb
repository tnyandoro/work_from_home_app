 <div class="center mt-3">
    <div class='custom-bg2 d-flex justify-content-around rounded col-12 col-md-6 center mb-3 shadow-sm text-light'>
      <h4 class ="mt-4 text-light font-weight-bold"><%= "Group Name: #{@group.name}" %></h4>
      <img src="<%= @group.icon%>" class="icon mb-2" alt="">
    </div>

    <ul>
      <% @group.transactions.each do |t|%>
        <div class='custom-bg d-flex flex-column col-12 col-md-5 rounded center mb-5 shadow-sm bg-white'>
          <div class = "d-flex justify-content-between">
            <p class ="mt-3 text-white"><%= t.name %><p>
            <p class ="mt-3 text-white">Hrs <%= t.amount %></p>
          </div>
          <div class = "d-flex justify-content-between">
            <p class ='text-white'>Creator: <%=t.author.name %><p>
            <p><small class="text-white"><%=t.created_at.strftime("%b %d, %Y")%></small></p>
          </div>
        </div>
      <%end%>
    </ul>
    <p class="center mt-1"><%= link_to "Edit group details", edit_group_path(@group), :class => 'btn  col-12 col-md-4 center mb-4 custom-bg2 text-white '%></p>

 </div>
 <%= link_to "Back", :back, :class => 'btn btn-primary col-12 col-md-4 center font-weight-bold text-white' %>
